package aop_p.adv;

import java.util.Arrays;

import org.aspectj.lang.ProceedingJoinPoint;

import aop_p.webToon.Figure;
import aop_p.webToon.KangFish;

public class FigureAdvice {

	Object figureTest(ProceedingJoinPoint joinPoint) {
		Figure res = null;
		
		int [] intArr = (int [])(joinPoint.getArgs());
		String [] stArr = (String [] )(joinPoint.getArgs())[0];

		try {
			System.out.println(Arrays.toString(stArr));
			if(stArr.length==0) {
				System.out.println("미끼를 넣으세요");
			}else {
			
				res = (KangFish)joinPoint.proceed();
				if(res.size<=20) {
					System.out.println("풀어주자:"+res);
					res = null;
				}
			}
		
		} catch (Throwable e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		
		return res;
	}
}
