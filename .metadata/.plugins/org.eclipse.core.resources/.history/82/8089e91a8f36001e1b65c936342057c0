package di_p.main;

import java.util.Arrays;

public class NewStudent {
	
	String [] name;
	int [] kor;
	int [] eng;
	int [] mat;
	int [] jum;
	int tot,avg,rank;
	
	void calc() {
		tot = 0;
		for (int i = 0; i<kor.length; i++) {
			tot = kor[i]+eng[i]+mat[i];
		}
		avg = tot/name.length;
	}

	public String[] getName() {
		return name;
	}

	public void setName(String... name) {
		this.name = name;
	}

	public int[] getKor() {
		return kor;
	}

	public void setKor(int... kor) {
		this.kor = kor;
	}

	public int[] getEng() {
		return eng;
	}

	public void setEng(int... eng) {
		this.eng = eng;
	}

	public int[] getMat() {
		return mat;
	}

	public void setMat(int... mat) {
		this.mat = mat;
	}

	public int getTot() {
		return tot;
	}

	public void setTot(int tot) {
		this.tot = tot;
	}

	public int getAvg() {
		return avg;
	}

	public void setAvg(int avg) {
		this.avg = avg;
	}

	public int getRank() {
		return rank;
	}

	public void setRank(int rank) {
		this.rank = rank;
	}
	

	@Override
	public String toString() {
		return "NewStudent [name=" + Arrays.toString(name) + ", kor=" + Arrays.toString(kor) + ", eng="
				+ Arrays.toString(eng) + ", mat=" + Arrays.toString(mat) + ", tot=" + tot + ", avg=" + avg + ", rank="
				+ rank + "]";
	}

	
}
