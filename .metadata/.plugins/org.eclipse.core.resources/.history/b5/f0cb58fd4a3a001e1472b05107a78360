package anno_p.com.sub1;

import org.springframework.stereotype.Component;

import anno_p.com.CoffeeInterface;
import jakarta.annotation.Resource;

public class ComponentCoffeeType implements CoffeeInterface{

	@Resource
	Americano ame;
	@Resource
	CaffeLatte latte;
	@Resource
	CaramelMacciatto caramel;
	
	@Override
	public String toString() {
		return "ComponentCoffeeType [ame=" + ame + ", latte=" + latte + ", caramel=" + caramel + "]";
	}

	@Override
	public void makeCoffee() {
		System.out.println("커피를 만듭니다");
		
	}

	@Override
	public void drinkCoffee() {
		System.out.println("커피를 마십니다");
		
	}

}

@Component
class Americano {
	
	String beanName = "콜롬비아 수프리모";
	String water = "아리수";
	int price = 1400;

	public Americano(String beanName, String water, int price) {
		super();
		this.beanName = beanName;
		this.water = water;
		this.price = price;
	}

	@Override
	public String toString() {
		return "Americano [beanName=" + beanName + ", water=" + water + ", price=" + price + "]";
	}
	
}

@Component
class CaffeLatte extends Americano{

	int price = 2000;
	String milk = "서울우유";
	
	public CaffeLatte(String beanName, String water, int price, int price2, String milk) {
		super(beanName, water, price);
		this.price = price2;
		this.milk = milk;
	}

	@Override
	public String toString() {
		return "CafeLatte [milk=" + milk + ", price=" + price + "]";
	}
	
}

@Component
class CaramelMacciatto extends Americano{

	int price = 3000;
	String caramel = "카라멜소스";
	

	public CaramelMacciatto(String beanName, String water, int price, int price2, String caramel) {
		super(beanName, water, price);
		this.price = price2;
		price = price2;
		this.caramel = caramel;
	}

	public CaramelMacciatto(String beanName, String water, int price) {
		super(beanName, water, price);
		
	}
	
	@Override
	public String toString() {
		return "CaramelMacciatto [caramel=" + caramel + ", price=" + price + "]";
	}
	
}