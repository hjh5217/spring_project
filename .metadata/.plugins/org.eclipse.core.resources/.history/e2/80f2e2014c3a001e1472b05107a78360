package anno_p.com.sub1;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Component;

import anno_p.com.CoffeeInterface;
import jakarta.annotation.Resource;

public class ComponentCoffeeType implements CoffeeInterface{

	@Resource(name="americano")
	Americano ame;
	/*
	 * @Resource CaffeLatte latte;
	 * 
	 * @Resource CaramelMacciatto caramel;
	 */
	
	@Override
	public String toString() {
		return "ComponentCoffeeType [ame=" + ame + "]";
	}

	@Override
	public void makeCoffee() {
		System.out.println("커피를 만듭니다");
		
	}

	@Override
	public void drinkCoffee() {
		System.out.println("커피를 마십니다");
		
	}

}

@Component
class Americano {
	
	String beanName = "콜롬비아 수프리모";
	String water = "아리수";
	int price = 1400;

	
	@Autowired
	public Americano(String beanName, String water, int price) {
		super();
		this.beanName = beanName;
		this.water = water;
		this.price = price;
	}



	@Override
	public String toString() {
		return "Americano [beanName=" + beanName + ", water=" + water + ", price=" + price + "]";
	}
	
}

